model User {
  id      Int      @default(autoincrement()) @id
  email   String   @unique
  name    String?
  /// @TypeGraphQL.omit(output: true)
  password String

  confirmation Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roles    Json
}